generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  username          String   @unique
  name              String
  email             String   @unique
  password          String
  profile_image_url String?
  bio               String?
  premium           Boolean  @default(false)
  role              Role     @default(USER)
  created_at        DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}
