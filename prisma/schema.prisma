datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                String    @id @default(uuid())
  username          String
  name              String
  email             String    @unique
  password          String
  profile_image_url String
  bio               String
  created_at        DateTime  @default(now())
  role              Role      @default(USER)
  premium           Boolean   @default(false)
}

enum Role {
  USER
  ADMIN
}
